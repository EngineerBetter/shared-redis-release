#!/bin/bash -e

source /var/vcap/packages/golang-1-linux/bosh/compile.env

GOPATH="$(mktemp -d)"
export GOPATH

mkdir -p "$GOPATH/src/github.com/onsi/ginkgo"
tar xfz ginkgo/ginkgo-1.10.3.tar.gz --strip-components=1 -C "$GOPATH/src/github.com/onsi/ginkgo/"

mkdir -p "$GOPATH/src/github.com/hpcloud/tail"
tar xzf ginkgo/tail-1.0.0.tar.gz --strip-components=1 -C "$GOPATH/src/github.com/hpcloud/tail"

pushd "$GOPATH"
    go build -o "$BOSH_INSTALL_TARGET/ginkgo" github.com/onsi/ginkgo/ginkgo
popd

rm -rf "$GOPATH"
